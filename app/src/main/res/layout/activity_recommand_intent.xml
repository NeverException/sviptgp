<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qf.tgp.plamtv.ui.activitys.Recommand_intent">

    <com.qf.tgp.plamtv.ui.activitys.MyVideoView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.qf.tgp.plamtv.ui.activitys.MyVideoView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00ff00"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="123" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="123" />
        </LinearLayout>

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableTop="@drawable/recommand_selector"
            android:gravity="center"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"
            android:text="未关注" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f000ff"></TableLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#0ab"></android.support.v4.view.ViewPager>

</LinearLayout>
