                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="弟弟救我1111111111111111111111111111111111111111111111111111111111"
                            android:textColor="#898989"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#C5C5C7"></View>
</LinearLayout>
