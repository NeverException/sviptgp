                        android:id="@+id/recommand_item02_renshu"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|left"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="#313335"
                        android:drawableLeft="@mipmap/abc_ic_go_search_api_mtrl_alpha"
                        android:gravity="left|center"
                        android:text="110.6万人看"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/recommand_item02_small"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recommand_item02_text01"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="老骚男"
                            android:textSize="10dp" />
                        <TextView
                            android:id="@+id/recommand_item02_text02"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="弟弟救我1111111111111111111111111111111111111111111111111111111111"
                            android:textColor="#898989"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/recommand_item03"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <ImageView
                        android:id="@+id/recommand_item03_ivlarge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                    <TextView
                        android:id="@+id/recommand_item03_renshu"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|left"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="#313335"
                        android:drawableLeft="@mipmap/abc_ic_go_search_api_mtrl_alpha"
                        android:gravity="left|center"
                        android:text="110.6万人看"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/recommand_item03_small"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
